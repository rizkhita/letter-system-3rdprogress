 $query=mysqli_query($con,"SELECT anggota_bidang.NIP,anggota_bidang.kode_bidang,cuti_sakit.id_pengajuan,data_pns.nama,cuti_sakit.NIP_pengaju,cuti_sakit.tgl_pengajuan,cuti_sakit.alasan_cuti,cuti_sakit.lama_cuti,cuti_sakit.tgl_mulai,cuti_sakit.tgl_selesai,cuti_sakit.no_tlp,cuti_sakit.sp_kabid FROM cuti_sakit inner join data_pns on cuti_sakit.NIP_pengaju=data_pns.NIP inner join anggota_bidang on cuti_sakit.NIP_pengaju=anggota_bidang.NIP where cuti_sakit.NIP_pengaju=anggota_bidang.NIP ");